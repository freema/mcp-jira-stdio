{
  "name": "mcp-jira-stdio",
  "version": "1.8.0",
  "description": "Model Context Protocol (MCP) server for Jira API integration",
  "author": "graslt",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-jira-stdio": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "check:all": "npm run check && npm run test:run && npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "inspector:dev": "NODE_ENV=development npx @modelcontextprotocol/inspector npx tsx src/index.ts",
    "setup:mcp": "node scripts/setup-mcp-config.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:connection": "node scripts/test-connection.cjs",
    "docker:build": "docker build -t mcp-jira-stdio .",
    "docker:run": "docker run -it --rm mcp-jira-stdio",
    "docker:push": "docker push freema/mcp-jira-stdio:latest && docker push ghcr.io/freema/mcp-jira-stdio:latest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "jira",
    "atlassian",
    "api",
    "claude",
    "ai"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "axios": "^1.7.0",
    "form-data": "^4.0.5",
    "md-to-adf": "^0.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "dotenv": "^17.2.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "prettier": "^3.5.0",
    "tsup": "^8.5.1",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.10"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "scripts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freema/mcp-jira-stdio.git"
  },
  "bugs": {
    "url": "https://github.com/freema/mcp-jira-stdio/issues"
  },
  "homepage": "https://github.com/freema/mcp-jira-stdio#readme",
  "publishConfig": {
    "access": "public"
  },
  "overrides": {
    "glob": ">=11.0.4",
    "marked": ">=4.0.10"
  }
}
